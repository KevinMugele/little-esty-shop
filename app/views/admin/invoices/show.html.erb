<h1>Invoice #<%= @invoice.id %></h1>

<h3>Status</h3>
<p><%= @invoice.status %></p>
<p>Created on: <%= @invoice.created_at_formatted %></p>
<p>Total Revenue: <%= number_to_currency(@invoice.total_revenue.fdiv(100)) %></p>

<h3>Customer</h3>
<p><%= @invoice.customer.first_name %> <%= @invoice.customer.last_name %>

<h3>Items on this Invoice:</h3>
<ul>
  <% @invoice.invoice_items.each do |invoice_item| %>
    <div id="item-<%= invoice_item.id %>">
      <li><%= invoice_item.item.name %></li>
        <ul>
          <li>Quantity: <%= invoice_item.quantity %></li>
          <li>Unit Price: <%= number_to_currency(@invoice.item_unit_price(invoice_item.item.id).fdiv(100)) %></li>
          <li>Status: <%= invoice_item.status %></li>
        </ul>
    </div>
  <% end %>
</ul>
