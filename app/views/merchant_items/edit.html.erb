<h1> Edit <%= @item.name %></h1>

<%= form_with url: merchant_item_path(id: @item.id), method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: @item.name %><br>

  <%= f.label :description %>
  <%= f.text_field :description, value: @item.description %><br>

  <%= f.label :unit_price %>
  <%= f.number_field :unit_price, value: @item.unit_price %><br>

  <%= f.submit "Submit" %>
<% end %>
