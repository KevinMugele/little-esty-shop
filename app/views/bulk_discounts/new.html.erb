<%= form_with model: [@merchant, @bulk_discount], local: true do |f| %>
  <%= f.label :percentage_discount, 'Percentage Discount (%):' %>
  <%= f.number_field :percentage_discount %>

  <%= f.label :quantity_threshold, 'Quantity Threshold:' %>
  <%= f.number_field :quantity_threshold %>

  <%= f.submit %>
<% end %>
